logs:
  - type: file
    path: /var/log/{{ log_dir_name }}/{{ access_log_name}}
    source: apache
    sourcecategory: http_web_access
    service: {{ service_name }} #apache

  - type: file
    path: /var/log/{{ log_dir_name }}/{{ error_log_name }}
    source: apache
    sourcecategory: http_web_access
    service: {{ service_name }} #apache